<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popupwindow_select_item_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_16"
        tools:text="进度查询" />

    <TextView
        android:id="@+id/tv_tipItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_item"
        android:background="@drawable/shape_popupwindow_tips_bg"
        android:paddingLeft="3dp"
        android:paddingTop="2dp"
        android:paddingRight="3dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_10"
        android:visibility="gone"
        tools:text="进度查询" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_item"
        android:background="@color/popupwindow_select_item_divider_color" />

</RelativeLayout>